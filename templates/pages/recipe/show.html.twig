{% extends 'base.html.twig' %}

{% block title %}Cookable - Ingredients{% endblock %}


{% block body %}
    <div class="container mx-auto">
        {% if recette %}
            <h1 class="my-4">Recette n°{{ recette.id }}</h1>
            <div id="container" class="row mx-auto align-middle">
                <div class="col-6">
                    <h2>{{ recette.name }}</h2>
                    <p>{{ recette.time }} minutes</p>
                    <p>{{ recette.people }} personnes</p>
                    <p>{{ recette.difficulty }}/5</p>
                    <p>{{ recette.description }}</p>
                    <p>{{ recette.price }}€</p>
                    <p>{{ recette.favorite == 1 ? "✅" : "" }}</p>
                    <p>{{ recette.createdAt|date("d-m-Y") }}</p>
                    <p>{{ recette.updatedAt|date("d-m-Y") }}</p>
                </div>
            </div>
        {% else %}
            <h1 class="my-4">Recette non trouvée</h1>
        {% endif %}
    </div>
{% endblock %}
